body,
html {
    font: 16px/1.4 Georgia, serif;
    background-color: #242424;
     -webkit-tap-highlight-color: transparent;
  -moz-tap-highlight-color: transparent;
  -ms-tap-highlight-color: transparent;
}


.page {
    max-width: 400px;
    padding: 2rem;
    margin: 0 auto;
    text-align: center;
    user-select: none;
}

h1 {
    font: 2rem/1.2 Georgia serif;
    margin-bottom: 1rem;
    color: #fc6;
}

.fifteen {
    width: 100%;
    background: #575757;
    padding-bottom: 100%;
    margin-bottom: 1.5rem;
    position: relative;

    .item {
        position: absolute;
        left: 0;
        top: 0;
        width: 25%;
        height: 25%;
        background: #fc6;
        color: #242424;
        font-size: 2rem;
        cursor: pointer;
        box-shadow: inset 0 0 0 1px #242424;
        transition:  transform 0.2s, filter 0.5s;
        outline: none;

        &Val {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 84%;
            height: 84%;
            margin: 8%;
            box-shadow: inset 0 0 0 2px #242424;
        }
    }

    &Won {
        .item {
            filter: brightness(200%)
        }
    }
}

button {
    border: none;
    padding: 0;
    outline: none;
    margin: 0;
}

.button {
   color: #242424;
   background: #fc6;
   font: 1.2rem Georgia serif;
   padding: 0.4em 1em;
   cursor: pointer;
}